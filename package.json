{
    "private": true,
    "name": "generieke_frontend_seed",
    "version": "0.0.1",
    "description": "Algemene frontend seed",
    "main": "app.js",
    "scripts": {
        "optimize:js": "uglifyjs dist/app.js --compress --mangle",
        "optimize:css": "cleancss dist/app.css",
        "optimize": "npm run optimize:js & npm run optimize:css",
        "svg:generate": "svg-sprite-generate -d src/assets/svg -o src/sprite/icons.svg",
        "sass:development": "sass --sourcemap=none src/assets/scss/app.scss:dist/app.css",
        "sass:production": "sass --sourcemap=none src/assets/scss/app.scss:dist/app.css",
        "copy:html": "cp src/index.html dist/",
        "copy:icons": "cp src/assets/sprite/icons.svg dist/",
        "copy:development": "npm run copy:html && npm run copy:icons",
        "copy:production": "npm run copy:html && npm run copy:icons",
        "elm:development": "elm-make src/app/App.elm --output=dist/app.js --debug",
        "elm:production": "elm-make src/app/App.elm --output=dist/app.js",
        "build:development": "npm run elm:development && npm run sass:development && npm run copy:development",
        "build:production": "npm run elm:production && npm run sass:production && npm run copy:production && npm run optimize",
        "watch": "watch 'npm run build:development' src/",
        "server": "browser-sync start --config 'bs-config.js'"
    },
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/GeneriekBedrijf/GeneriekeFrontendSeed"
    },
    "keywords": [
        "GeneriekeFrontendSeed",
        "Generiek",
        "Frontend",
        "Seed"
    ],
    "author": "Lode Lesage",
    "license": "ISC",
    "devDependencies": {
        "browser-sync": "2.19.0",
        "clean-css-cli": "4.1.10",
        "elm": "0.18.0",
        "elm-format": "0.7.0-exp",
        "http-proxy-middleware": "^0.17.4",
        "svg-sprite-generator": "0.0.7",
        "uglify-es": "3.2.2",
        "watch": "1.0.2"
    }
}
